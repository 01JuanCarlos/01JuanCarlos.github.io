---
import fs from 'fs';
import matter from 'gray-matter';

const file = fs.readFileSync('./content/home.md', 'utf-8');
const { data, content } = matter(file);
---

<html>
  <head>
    <title>{data.title}</title>
  </head>
  <body>
    <h1>{data.title}</h1>
    <p>{data.description}</p>
    <div>{content}</div>
  </body>
</html>
